<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.tagsView.TagsFragment">

    <data>

        <variable
            name="tag"
            type="com.example.studyflow.model.Tag" />

        <variable
            name="listener"
            type="com.example.studyflow.adaptor.TagClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:onClick="@{listener::clickTag}">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tagTittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@{tag.tagName}"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </TextView>

                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:visibility="visible">

                    <!-- TOTAL POMODORO-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Pomodoros:"
                        app:layout_column="0"
                        app:layout_row="0" />

                    <TextView
                        android:id="@+id/totalPomodoro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(tag.totalNumberOfPomodoro)}"
                        app:layout_column="1"
                        app:layout_row="0" />


                    <!-- TOTAL CARD-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Cards:"
                        app:layout_column="0"
                        app:layout_row="1" />

                    <TextView
                        android:id="@+id/totalCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(tag.totalNumberOfCard)}"
                        app:layout_column="1"
                        app:layout_row="1" />


                    <!-- TOTAL FOCUSED TIME-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Focused Time:"
                        app:layout_column="0"
                        app:layout_row="2" />

                    <TextView
                        android:id="@+id/totalFocused"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(tag.totalNumberOfFocusedMinute)}"
                        app:layout_column="1"
                        app:layout_row="2" />


                    <!-- TOTAL OUT OF FOCUSED TIME-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Out of Focused Time:"
                        app:layout_column="0"
                        app:layout_row="3" />

                    <TextView
                        android:id="@+id/totalOutOfFocused"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(tag.totalNumberOfOutOfFocusedMinute)}"
                        app:layout_column="1"
                        app:layout_row="3" />


                    <!-- TOTAL STOP-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stop Count:"
                        app:layout_column="0"
                        app:layout_row="4" />

                    <TextView
                        android:id="@+id/totalStop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(tag.totalNumberOfStop)}"
                        app:layout_column="1"
                        app:layout_row="4" />


                    <!-- CARD RATIO-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card Ratio:"
                        app:layout_column="0"
                        app:layout_row="5" />

                    <ProgressBar
                        android:id="@+id/cardRatioProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:progress="@{tag.cardRatio}"
                        app:layout_column="1"
                        app:layout_row="5" />

                    <TextView
                        android:id="@+id/cardRatio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(tag.totalNumberOfCurrentCorrectAnswer) + '/' + String.valueOf(tag.totalNumberOfCard)}"
                        app:layout_column="2"
                        app:layout_row="5" />

                </androidx.gridlayout.widget.GridLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>